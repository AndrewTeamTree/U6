

extends layout.pug

block content

  article.portfolio-intro0
    h1(class="font-effect-fire" style="color: rgb(4, 26, 168)") Let's make the web great together!

  article.grid-container
    
    each project in projects
      .grid-item
        a(href=`/projects/${project.id}`)
          h2(style="color: #0a0a0a;") #{project["project_name"]}
          img.thumbnail(src= `${project["image_urls"][0]}`, alt=`Image of Project ${project["project_name"]}`)
